{
  "name": "chatgpt-editor",
  "displayName": "chatgpt-editor",
  "description": "VSCode extension that allows you to use ChatGPT on the editor.",
  "version": "1.0.2",
  "keywords": [
    "vscode",
    "chatgpt",
    "AI",
    "GPT-3",
    "GPT_4",
    "openai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/takagimeow/chatgpt-editor"
  },
  "preview": false,
  "license": "MIT",
  "author": {
    "name": "Keisuke Takagi",
    "email": "mit@takagi.app"
  },
  "publisher": "takagimeow",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:chatgpt-editor.prompt"
  ],
  "icon": "resources/extensionIcon.png",
  "galleryBanner": {
    "color": "#11A47F",
    "theme": "light"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chatgpt-editor.prompt",
        "title": "Prompt Selected Texts"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "chatgpt-editor.prompt",
          "when": "editorHasSelection && !isInDiffEditor"
        }
      ]
    },
    "configuration": {
      "title": "ChatGPT Editor",
      "properties": {
        "chatgpt-editor.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for ChatGPT"
        },
        "chatgpt-editor.model": {
          "type": "string",
          "default": "gpt-3.5-turbo-0301",
          "enum": [
            "gpt-3.5-turbo-0301",
            "gpt-3.5-turbo",
            "gpt-4"
          ],
          "description": "Model for ChatGPT"
        },
        "chatgpt-editor.temperature": {
          "type": "number",
          "default": 0.7,
          "description": "Temperature for ChatGPT"
        }
      }
    },
    "keybindings": [
      {
        "command": "chatgpt-editor.prompt",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorHasSelection && !isInDiffEditor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/sinon": "^10.0.13",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "ts-chatgpt": "^0.5.1"
  }
}
